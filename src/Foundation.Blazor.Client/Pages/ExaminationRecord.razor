<SfDialog Width="335px" IsModal="true" @bind-Visible="Visibility">
    <DialogTemplates>
        <Header> Warning </Header>
        <Content>
            <p>FDI is invalid or not found.</p>
        </Content>
    </DialogTemplates>
    <DialogButtons>
        <DialogButton Content="OK" IsPrimary="true" OnClick="@DialogButtonClick" />
    </DialogButtons>
