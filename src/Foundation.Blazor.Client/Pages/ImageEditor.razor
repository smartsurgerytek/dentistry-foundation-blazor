        margin-bottom: 3px;
    }

    .flex-parent {
        display: flex;
        flex-direction: row;
        justify-content: center;
        align-items: center;
        position: relative;
    }

    .e-image-editor {
        position: static !important;
    }

    .e-toolbar-area {
        display: block;
        position: absolute;
        transform: rotate(90deg);
        transform-origin: 0% 0%;
        top: 0px;
