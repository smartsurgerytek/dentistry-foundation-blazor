@page "/ImageEditor"
@using Syncfusion.Blazor.Buttons
@using Syncfusion.Blazor.ImageEditor
@using Syncfusion.Blazor.Spinner

<div class="btn-div">
    <SfButton OnClick="BackToFileManager">Back To File Manager</SfButton>
    <SfButton OnClick="SaveAsync">Save To Storage</SfButton>
</div>

<div class="flex-parent">
    <div style="width: 50px"></div>
    <div class="image-editor-parent">
        <SfSpinner @bind-Visible="ShowSpinner"></SfSpinner>
        <SfImageEditor @ref="SfImageEditor" Height="80vh" Toolbar="customToolbarItem">
            <ImageEditorEvents ToolbarItemClicked="ToolbarItemClicked"></ImageEditorEvents>
        </SfImageEditor>
    </div>
</div>

